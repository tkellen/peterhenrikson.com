themeColor = #233223
timeLine = #B4AF91
timeBg = #40411E
timeBgOdd = #32331D
dateColor = timeLine

@import 'nib'
global-reset()
@import 'skeleton.css'
@import 'font-awesome.css'
@import 'nav'
@import 'sections'
@import 'splash'
@import 'about'
@import 'services'
@import 'work'
@import 'contact'

html, body
  height: 100%
  font-family: Lato, sans-serif
  font-size: 20px
  font-weight: 300
  min-width: 240px
  line-height: 150%
  background-color: #000

a
  text-decoration: none
  color: #ddd
  transition: all .1s
  &:hover
    color: #fff

h1, h2, h3, h4, h5
  font-family: Marcellus, georgia, serif
  line-height: 130%

h1
  display: inline-block
  margin: 0 0 30px 0
  font-size: 30px
  padding-bottom: 5px

  &:hover
    border-color: #72a329

h2
  font-size: 28px
h3
  font-size: 26px
h4
  font-size: 24px
h5
  font-size: 22px

hr
  border-color: #999
  margin: 10px 0

p
  margin-bottom: 20px


.italic
  font-style: italic

