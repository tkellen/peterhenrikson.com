#about
  h3
    font-size: 20px
  a
    text-decoration: none

.peter
  text-align: center
  h2
    color: #eee
    margin: 0
    line-height: 40px

  p
    color: #eee
    line-height: 26px

  .portrait
    position: relative
    margin: 0 auto 15px auto
    width: 250px
    height: 250px
    border-radius: 50%
    overflow: hidden
    border: 4px solid rgba(255,255,255,.4)
    transition: border-color .5s

    img
      width: 100%

@media (max-width: 979px)
  .portrait
    width: 200px
    height: 200px
