nav
  position: fixed
  top: -65px
  z-index: 100
  width: 100%
  color: #fff
  background-color: #111
  transition: all .25s
  clearfix()
  &.stuck
    top: 0px

  .brand
    float: left
    height: 45px
    background: transparent url('assets/img/logosmall.png') 15px 12px no-repeat
    padding: 17px 20px 0 60px
    margin-bottom: 0
    line-height: 100%
    font-size: 28px

  ul
    display: block
    width: 100%
    margin-top: 19px
    line-height: 100%
    li
      display: inline-block
      margin-right: 15px
      a
        display: block
        font-size: 20px
        line-height: 25px
        padding: 0 5px
        border-radius: 5px
        &:hover
          color: #fff

// mobile only
@media only screen and (max-width: 767px)
  nav
    position: relative
    top: 0
    display: block
    height: 40px
    .brand
      display: none
    ul
      height: auto
      text-align: center
      margin-top: 10px
      li
        margin-right: 0 !important
        a
          font-size: 14px