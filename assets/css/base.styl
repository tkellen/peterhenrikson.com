html
  background #111

body
  color #fff
  font-family Lato,sans-serif
  font-size 18px
  font-weight 300
  line-height 140%
  height 100%
  min-width 320px

strong
  font-weight 400

em
  font-style italic

p
  margin 0
  padding 0 0 10px

h1,h2,h3,h4,h5
  font-weight 700
  line-height 120%
  font-family frank_the_architect, serif

h1
  font-size 36px

h2
  font-size 24px

h3
  font-size 18px

a
  color #5ba1cf
  text-decoration none
  &:hover
    color: #327bab
    text-decoration underline
  &[rel=external]
    padding-right 15px
    background transparent url('/assets/img/external.png') no-repeat center right

.left
  float: left
.right
  float: right

header
  z-index: 1000
  top: 0
  position: fixed
  box-sizing: border-box
  width: 100%
  background-color: #000
  background-color: rgba(0,0,0,.95)
  line-height: 40px
  padding: 0 10px;
  clearfix()
  nav
    a
      color: #fff
      &:hover
        text-decoration: none

.shad
  border-bottom: 1px solid #000
  box-shadow(0 0 5px rgba(0,0,0,.5))


