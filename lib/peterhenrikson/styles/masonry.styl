.masonry
  display: block
  text-decoration: none
  max-width: 220px
  width: 100%
  margin-bottom: 20px
  line-height: 0
  overflow: hidden
  border-radius: 5px
  box-shadow: 0 0 10px rgba(0,0,0,.2)
  border: 1px solid #000;
  img
    width: 100%

  h3
    text-align: center
    padding: 10px
    font-size: 16px
    background-color: #111
    color: #fff
