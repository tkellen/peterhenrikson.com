themeColor = #233223
timeLine = #B4AF91
timeBg = #40411E
timeBgOdd = #32331D
dateColor = timeLine

@import 'nib'
global-reset()
@import 'Skeleton/stylesheets/skeleton.css'
@import 'Font-Awesome/css/font-awesome.css'
@import 'humane-js/themes/jackedup.css'

@import 'nav'
@import 'splash'
@import 'about'
@import 'services'
@import 'masonry'
@import 'work'
@import 'contact'
@import 'timeline'
@import 'project-product'

html, body
  height: 100%
  font-family: Lato, sans-serif
  font-size: 20px
  font-weight: 300
  min-width: 240px
  line-height: 150%
  background-color: #111

a
  color: #fff
  transition: all .1s
  text-decoration: underline
  &:hover
    color: #fff

h1, h2, h3, h4, h5
  font-family: Marcellus, georgia, serif
  line-height: 130%

h1
  display: inline-block
  margin: 0 0 30px 0
  font-size: 30px
  padding-bottom: 5px

  &:hover
    border-color: #72a329

h2
  font-size: 28px
h3
  font-size: 26px
h4
  font-size: 24px
h5
  font-size: 22px

hr
  border-color: #999
  margin: 10px 0

p
  margin-bottom: 20px

.italic
  font-style: italic

.dagger
  display: inline
  &:after
    content: 'â€¡'

.shadow
  text-shadow: 0 0 10px rgba(0,0,0,.3),
               0 0 10px rgba(0,0,0,.3),
               0 0 10px rgba(0,0,0,.3)

.tel a
  text-decoration: none

section
  position: relative
  padding: 150px 0
  box-sizing: border-box
  transition: background-color .5s
  box-shadow: 0 0 20px 5px #000
  &.fullheight
    min-height: 100%
  &.smallpad
    padding: 120px 0 0 0

  h1
    display: block
    text-align: center
    font-size: 60px
    color: #fff

.circled
  position: relative
  margin: 0 auto 15px auto
  width: 275px
  height: 275px
  border-radius: 50%
  overflow: hidden
  border: 8px solid rgba(0,0,0,.3)
  box-shadow: 0 0 4px #000
  transition: border-color .5s
  &.sm
    width: 225px
    height: 225px

  img
    width: 100%
    border-radius: 50%
    display: block

/* Smaller than standard 960 (devices and browsers) */
@media only screen and (max-width: 959px)
  .circled.sm
    width: 190px !important
    height: 190px !important


/* All Mobile Sizes (devices and browser) */
@media only screen and (max-width: 767px)
  section
    padding: 75px 0
    h1
      font-size: 45px !important
    .content
      text-align: center
  .circled
    width: 225px !important
    height: 225px !important

/* Mobile Portrait Size to Mobile Landscape Size (devices and browsers) */
@media only screen and (max-width: 479px)
  section
    height: auto
    padding: 20px 0
    h1
      font-size: 30px !important
      margin: 18px 0 35px 0

