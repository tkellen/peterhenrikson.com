themeColor = #233223
timeLine = #B4AF91
timeBg = #40411E
timeBgOdd = #32331D
dateColor = timeLine

@import 'nib'
global-reset()
@import 'Skeleton/stylesheets/skeleton.css'
@import 'swiper/dist/idangerous.swiper.css'
@import 'Font-Awesome/css/font-awesome.css'
@import 'humane-js/themes/jackedup.css'

@import 'nav'
@import 'sections'
@import 'splash'
@import 'about'
@import 'services'
@import 'work'
@import 'timeline'
@import 'contact'
@import 'project'

html, body
  height: 100%
  font-family: Lato, sans-serif
  font-size: 20px
  font-weight: 300
  min-width: 240px
  line-height: 150%
  background-color: themeColor

a
  color: #fff
  transition: all .1s
  text-decoration: underline
  &:hover
    color: #fff

h1, h2, h3, h4, h5
  font-family: Marcellus, georgia, serif
  line-height: 130%

h1
  display: inline-block
  margin: 0 0 30px 0
  font-size: 30px
  padding-bottom: 5px

  &:hover
    border-color: #72a329

h2
  font-size: 28px
h3
  font-size: 26px
h4
  font-size: 24px
h5
  font-size: 22px

hr
  border-color: #999
  margin: 10px 0

p
  margin-bottom: 20px

.italic
  font-style: italic

