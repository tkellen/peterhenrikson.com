.work
  background-color: #000

.swiper-container
  height: 100%

.panel
  position: relative
  width: 100%
  height: 500px
  box-sizing: border-box
  padding: 30px 40px

  .arrow
    position: absolute
    top: 50%
    margin-top: 15px
    width: 17px
    height: 30px
    border: none
    cursor: pointer
    outline: none
    background-image: url(img/arrows.png)
    background-repeat: no-repeat
    background-color: transparent
    &.left
      background-position: left top
      left: 10px
    &.right
      background-position: left bottom
      right: 10px

.content-slide
  padding: 20px
  color: #fff
  h3
    text-align: center
    margin-bottom: 5px
  img
    width: 100%
