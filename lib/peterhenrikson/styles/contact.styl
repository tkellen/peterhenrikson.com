#contact
  background: #000 url("/img/contact.jpg") fixed no-repeat
  background-size: cover

  input, textarea
    color: #333
    font-family: Lato, sans-serif
    font-weight: bold
    position: relative
    font-size: 18px
    line-height: 22px
    background-color: #f2f2f2
    padding: 10px
    margin-bottom: 20px
    width: 100%
    box-sizing: border-box
    border: 3px solid rgba(0,0,0,0)
    border-radius: 3px
    &.iconed
      font-family: FontAwesome

    &:focus
      background: #fff
      box-shadow: 0
      border: 3px solid lighten(themeColor,20%)
      outline: none

    &:hover
      background-color: white

  textarea
    height: 150px
    line-height: 125%

  input[type=submit]
    width: 100%
    cursor: pointer
    background-color: darken(themeColor,10%)
    color: white
    font-size: 24px
    padding: 20px 0
    transition: background-color .25s
    &:hover
      background-color: darken(themeColor,50%)

  .recaptcha
    background-color: #fff
    float: left
    font-size: 12px

.vcard
  background-color: #111
  font-size: 24px
  padding: 20px 0
  text-align: center
  color: #fff
  p
    margin: 0
  .tel
    margin-top: 10px



