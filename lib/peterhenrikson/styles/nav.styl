nav
  position: relative
  z-index: 100
  width: 100%
  background-color: #111
  box-shadow: 0 3px 3px rgba(0,0,0,.30)
  -webkit-transform: translateZ(400px) // push up on z axis
  clearfix()
  &.stuck
    position: fixed
    top: 0

  .brand
    float: left
    height: 45px
    padding: 17px 20px 0 0px
    margin-bottom: 0
    line-height: 100%
    font-size: 28px
  .logosmall
    float: left
    height: 35px
    width: 35px
    margin: 12px 10px 0 10px
  ul
    display: block
    width: 100%
    margin-top: 19px
    line-height: 100%
    li
      display: inline-block
      margin-right: 15px
      a
        display: block
        font-size: 20px
        line-height: 25px
        padding: 0 5px
        border-radius: 5px
        text-decoration: none

// mobile only
@media only screen and (max-width: 767px)
  nav
    position: absolute
    top: 0
    display: block
    text-align: center
    .logosmall, .brand
      display: none
    ul
      height: auto
      margin: 10px -15px 10px 0
      li
        margin-right: 0 !important
        a
          font-size: 14px

